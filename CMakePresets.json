{
  "version": 6,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 21,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "base",
      "hidden": true,
      "binaryDir": "${sourceDir}/build/${presetName}",
      "cacheVariables": {
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
      }
    },
    {
      "name": "dev",
      "displayName": "Development",
      "description": "Development build with tests",
      "inherits": "base",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "PSR_BUILD_TESTS": "ON",
        "PSR_BUILD_EXAMPLES": "ON",
        "PSR_BUILD_C_API": "ON"
      }
    },
    {
      "name": "release",
      "displayName": "Release",
      "description": "Release build",
      "inherits": "base",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "PSR_BUILD_TESTS": "OFF",
        "PSR_BUILD_EXAMPLES": "OFF"
      }
    },
    {
      "name": "windows-release",
      "displayName": "Windows Release",
      "description": "Release build for Windows",
      "inherits": "base",
      "generator": "Visual Studio 17 2022",
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      },
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "PSR_BUILD_TESTS": "ON",
        "PSR_BUILD_C_API": "ON"
      }
    },
    {
      "name": "linux-release",
      "displayName": "Linux Release",
      "description": "Release build for Linux",
      "inherits": "base",
      "generator": "Unix Makefiles",
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Linux"
      },
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "PSR_BUILD_TESTS": "ON",
        "PSR_BUILD_C_API": "ON"
      }
    },
    {
      "name": "all-bindings",
      "displayName": "All Bindings",
      "description": "Build with all language bindings enabled",
      "inherits": "base",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "PSR_BUILD_TESTS": "ON",
        "PSR_BUILD_C_API": "ON",
        "PSR_BUILD_PYTHON_BINDING": "ON"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "dev",
      "displayName": "Development Build",
      "configurePreset": "dev"
    },
    {
      "name": "release",
      "displayName": "Release Build",
      "configurePreset": "release"
    },
    {
      "name": "windows-release",
      "displayName": "Windows Release Build",
      "configurePreset": "windows-release",
      "configuration": "Release"
    },
    {
      "name": "linux-release",
      "displayName": "Linux Release Build",
      "configurePreset": "linux-release"
    }
  ],
  "testPresets": [
    {
      "name": "dev",
      "displayName": "Development Tests",
      "configurePreset": "dev",
      "output": {
        "outputOnFailure": true
      }
    },
    {
      "name": "windows-release",
      "displayName": "Windows Release Tests",
      "configurePreset": "windows-release",
      "configuration": "Release",
      "output": {
        "outputOnFailure": true
      }
    },
    {
      "name": "linux-release",
      "displayName": "Linux Release Tests",
      "configurePreset": "linux-release",
      "output": {
        "outputOnFailure": true
      }
    }
  ]
}
